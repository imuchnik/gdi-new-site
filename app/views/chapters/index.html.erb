<% provide(:title, "Chapters") %>
  <section class="main-container">
    <div class="container">

      <div class="underlined-headline">
        <h2>We are now in <%= @chapters.count %> cities!</h2>
          <hr>
          <p class="subtitle hide">Don't see your hometown?
            <% if current_admin_user != nil %>
              <%= link_to "Start a new chapter!", "#{root_path}admin/chapters/new" %>
              <% else %>
              <a href="https://docs.google.com/forms/d/18vn6QF64wg8i7euJXSA4HlYWO4AlL9i04o7057-ewuQ/viewform" target="_blank" >Start a new chapter!</a>
            <% end %>
          </p>
      </div>

      <section class="state-index hide">
        <% @states.each do |s| %>
          <div class="state-container">
            <div class="state"><%= image_tag(image_route(s[0])) %></div>
            <hr>
            <h2><%= s[0] %></h2>
            <% s[1].each do |l| %>
              <h3 class="large"><%= link_to l, chapter_path(l.parameterize) %></h3>
            <% end %>
          </div>
        <% end %>
      </section>

      <section id="state-list">
        <div class="collapsible show">
          <% @states.each do |s| %>
            <h3><span class="chevron-closed">&nbsp;</span>
               <%= s[0] %>
            </h3>
            <div>
              <% s[1].each do |l| %>
                <p><%= link_to l, chapter_path(l.parameterize) %></p>
              <% end %>
            </div>
          <% end %>
        </div>
      </section>
    </div>
  </section>
